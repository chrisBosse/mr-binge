      "plugin:vue/essential",
      "plugin:vue/recommended",
      "vuetify"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
